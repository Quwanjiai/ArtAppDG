<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/viewpager_bkf"
    tools:context=".loginkFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="709dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:padding="20dp">

            <EditText
                android:id="@+id/emailLBTN"
                android:layout_width="229dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:background="@drawable/edittextcolo"
                android:hint="Username"
                android:padding="8dp" />

            <EditText
                android:id="@+id/passwordLBTN"
                android:layout_width="229dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/edittextcolo"
                android:hint="Password"
                android:inputType="textPassword"
                android:padding="8dp" />

            <Button
                android:id="@+id/loginBTN"
                android:layout_width="229dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:background="@drawable/edittextcolo"
                android:text="Login"
                android:textSize="18sp"
                app:cornerRadius="30dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:id="@+id/signRedirectText"
                android:text="Dont have an account? signUp Here."
                android:textAlignment="center"
                android:textSize="19dp"
                android:textColor="@color/cryout" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>