<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background3"
    tools:context=".TextGenActivity">

    <TextView
        android:layout_width="407dp"
        android:layout_height="97dp"
        android:text="@string/textPo"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.069" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="415dp"
        android:layout_height="524dp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.685">

        <TextView
            android:id="@+id/prompt1"
            android:layout_width="311dp"
            android:layout_height="60dp"
            android:layout_marginBottom="16dp"
            android:text="Prompt 1"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/prompt2"
            android:layout_width="313dp"
            android:layout_height="65dp"
            android:layout_marginBottom="16dp"
            android:text="Prompt 2"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/prompt3"
            android:layout_width="311dp"
            android:layout_height="60dp"
            android:layout_marginBottom="32dp"
            android:text="Prompt 3"
            android:textSize="24sp" />

        <Button
            android:id="@+id/generateButton"
            android:layout_width="348dp"
            android:layout_height="90dp"
            android:background="@drawable/gradient_background4"
            android:text="Generate Prompts" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>